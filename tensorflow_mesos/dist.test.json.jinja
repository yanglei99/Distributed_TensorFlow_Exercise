{%- set name = "dist.test" %}
{%- set image = "yanglei99/tensorflow_test" %}
{%- set worker_replicas = 2 %}
{%- set ps_replicas = 1 -%}
{%- set dns_domain = "marathon.mesos" %}
{%- set port = 2333 %}
{%- set train_dir = "hdfs://HDFS_HOST:9000/train_dir/test" %}
{%- set jobName = "/dist_test.py" %}
{%- set tensorboard = true %}
{%- set cpu = 3 %}
{%- set mem = 6144 %}

{%- set replicas = {"worker": worker_replicas, "ps": ps_replicas} -%}

{%- macro worker_hosts() -%}
  {%- for i in range(worker_replicas) -%}
    {%- if not loop.first -%},{%- endif -%}
    worker-{{ i }}.{{ name }}.{{ dns_domain }}:{{ port + i }}
  {%- endfor -%}
{%- endmacro -%}

{%- macro ps_hosts() -%}
  {%- for i in range(ps_replicas) -%}
    {%- if not loop.first -%},{%- endif -%}
    ps-{{ i }}.{{ name }}.{{ dns_domain }}:{{ port + worker_replicas + i }}
  {%- endfor -%}
{%- endmacro -%}

{
  "id": "{{ name }}",
  "apps": [
    {%- for job in ["worker", "ps"] -%}
    {%- for i in range(replicas[job]) %}
    {
      "id": "{{ job }}-{{ i }}",
      "container": {
        "docker": {
          "image": "{{ image }}"
        },
        "network": "HOST",
        "type": "MESOS"
      },
      "args": [ "{{ jobName }}", "--worker_hosts", "{{ worker_hosts() }}", "--ps_hosts", "{{ ps_hosts() }}", "--job_name", "{{ job }}", "--task_index", "{{ i }}", "--log_dir", "{{ train_dir }}"],
      "cpus": {{ cpu }},
      "mem": {{ mem }},
      "instances": 1
    }{%- if not loop.last or tensorboard %},{% endif %}
    {%- endfor %}
    {%- endfor %}
    {
      "id": "tensorboard",
      "container": {
        "docker": {
          "image": "{{ image }}"
        },
        "network": "HOST",
        "type": "MESOS"
      },
      "acceptedResourceRoles": ["slave_public"],
      "cmd": "tensorboard --logdir {{ train_dir }}",
      "cpus": {{ cpu }},
      "mem": {{ mem }},
      "instances": 1
    }
  ]
}
